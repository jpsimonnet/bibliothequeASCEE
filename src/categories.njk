---
layout: layouts/base.njk
title: Toutes les catégories
permalink: /categories/
---

<div class="categories-container">
  
  <header class="categories-header">
    <h1>Parcourir par catégorie</h1>
    {% set allCategories = livres | map("type") | unique | sort %}
    <p>{{ allCategories.length }} catégories disponibles</p>
  </header>

  <div class="categories-grid">
    {% for categorie in allCategories %}
      {% if categorie %}
        {% set count = 0 %}
        {% for livre in livres %}
          {% if livre.type == categorie %}
            {% set count = count + 1 %}
          {% endif %}
        {% endfor %}
        
        <article class="categorie-card">
          <a href="{{ ('/categorie/' + categorie|slugify + '/') | url }}">
            <div class="categorie-preview">
              {% set shown = 0 %}
              {% for livre in livres %}
                {% if livre.type == categorie and shown < 2 %}
                  <img src="{{ ('/images/covers/' + livre.id + '.webp') | url }}" alt="{{ livre.nom }}" loading="lazy" >
                  {% set shown = shown + 1 %}
                {% endif %}
              {% endfor %}
            </div>
            <div class="categorie-info">
              <h3>{{ categorie }}</h3>
              <p class="livre-count">{{ count }} livre{% if count > 1 %}s{% endif %}</p>
            </div>
          </a>
        </article>
      {% endif %}
    {% endfor %}
  </div>

</div>
